<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/info_window_view"
    android:layoutDirection="locale"
    android:padding="10dp"
    android:layout_marginHorizontal="20dp">

    <TextView
        android:id="@+id/tv_title_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/bright_blue"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_snippet_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_address"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/number_of_costs"
        android:textColor="@color/center_blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_snippet_number_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_address"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="10dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/center_blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_snippet_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_snippet_number"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/costs_amount_sum"
        android:textColor="@color/center_blue"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_snippet_amount_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_snippet_number"
        android:layout_alignParentEnd="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/center_blue"
        android:textSize="14sp" />
</RelativeLayout>